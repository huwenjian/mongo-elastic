# http://blog.csdn.net/smilepasta035/article/details/73662425

#linux nvm
    curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.31.1/install.sh | bash

    source ~/.bashrc

#安装node
    nvm install 6.10.1


#使用npm安装grunt
    npm install –g grunt–cli


#npm安装依赖
    npm install
    或者 npm install -g cnpm --registry=https://registry.npm.taobao.org
    cnpm install


#修改Gruntfile.js  elasticsearch-head-master/Gruntfile.js 找到下面connect属性，新增hostname: ‘0.0.0.0’:

     connect: {
             server: {
                 options: {
                     hostname: '0.0.0.0',
                     port: 9100,
                     base: '.',
                     keepalive: true
                 }
             }
         }


#启动
    grunt server

#firewall 打开9100 端口
    firewall-cmd  --add-port=9100/tcp --permanent
    firewall-cmd  --reload

#后台启动
    nohup grunt server &


#关闭插件

    ps aux|grep head

    kill 进程号